{
"name": "Simple Data Layer Viewer",
"short_name": "DL Viewer",
"version": "1.5",
"description": "Simple Plugin for displaying the Data Layer Object of a Webpage.",
"manifest_version": 2,
"content_scripts": [{
	"matches": ["<all_urls>"],
	"js": ["content.js"]
}],
"browser_action": {
    "default_icon": {
        "128": "icon.png"
    },
	"default_popup": "popup.html"
},
"icons": {
  "128": "icon.png"
},
"options_ui": {
    "page": "options.html",
    "chrome_style": true
},
"permissions": [
	"activeTab",
	"storage"
	]
}